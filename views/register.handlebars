<header>
  <div class="row align-items-center">
    <div class="col-2">
      <img width="100px" src="images/PM_Icon.jpg"/>
    </div>
    <div class="col-6">
      <h3> Agility PM </h3>
    </div>
    <div class="col-4">
    </div>
  </div>
</header>

<div class="login-padding" style="padding-top: 10%">
  <div class="container">
      <div class="col 6">
        <div class="row card">
          <h3>Registration Form</h3>
          <h5>We're excited to have you on board!</h5>
          <div>
            <label>First Name: </label>
            <input type="text" id="firstname" placeholder="John" name="fname" required>
          </div>
          <div>
            <label>Last Name: </label>
            <input type="text" id="lastname" placeholder="Smith" name="lname" required>
          </div>
          <div>
            <label>Username: </label>
            <input type="text" id="username" placeholder="JSmith94" name="uname" required>
          </div>
          <div>
            <label>Password: </label>
            <input type="password" id="password" placeholder="Password" name="psw" required>
          </div>
          <div>
            <button type="button" onclick="window.location = '/login';" class="button-red">Back</button>
            <button type="button" id="registerUser" class="button-green">Register</button>
          </div>
          <br/>
          <i>All Fields are Required.</i>
        </div>
      </div>
  </div>
</div>

<footer className="example">
  <div className="row">
    <div className="col s3">
      <a className="white-text hide-on-small-only" />
    </div>
    <div className="col s6">
      <div>
        <div className="center-align"/>
      </div>
    </div>
    <div className="col s3">
      <a className="white-text right hide-on-small-only">By Calum Bell</a>
    </div>
  </div>
</footer>

<script>
$(document).ready(function() {
  $("#registerUser").click(function(e) {
    e.preventDefault();
    $.ajax({
      type: "POST",
      url: "/register",
      data: {
        username: $("#username").val(),
        password: $("#password").val(),
        first_name: $("#firstname").val(),
        last_name: $("#lastname").val()
      },
      success: function(result) {
        alert(JSON.stringify(result));
        window.location = "/home";
      },
      error: function(result) {
        alert('error');
      }
    });
  });
  });
</script>
